{
  "name"             : "akeinhell/telegram-bot",
  "description"      : "[IN DEVELOP] A complete Telegram bot API implementation written in PHP, with support for inline bots!",
  "authors"          : [
    {
      "name" : "Aleksey Dorokhov",
      "email": "akeinhell@gmail.com"
    }
  ],
  "require"          : {
    "php"                 : ">=7.1",
    "guzzlehttp/guzzle"   : "^6.2",
    "nesbot/carbon"       : "^1.21",
    "jenssegers/model"    : "^1.1",
    "league/event"        : "^2.1",
    "monolog/monolog"     : "^1.23",
    "illuminate/support"  : "^5.5",
    "illuminate/container": "^5.5"
  },
  "require-dev"      : {
    "phpunit/phpunit"   : "^4.8|^5.0",
    "phpspec/prophecy"  : "^1.5",
    "fzaninotto/faker"  : "^1.6"
  },
  "autoload"         : {
    "psr-4": {
      "Telegram\\": "src/"
    }
  },
  "autoload-dev"     : {
    "psr-4": {
      "Telegram\\Tests\\": "tests/"
    }
  },
  "config"           : {
    "preferred-install": "dist"
  },
  "minimum-stability": "stable",
  "license":"MIT",
  "prefer-stable"    : true
}
